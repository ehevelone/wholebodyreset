{
  "version": "1.0",
  "purpose": "Determine the appropriate AI response state based on user input patterns, tolerance, duration, and intent within the Whole Body Reset system.",
  "decision_principles": [
    "Stability takes precedence over progress.",
    "Patterns matter more than intensity.",
    "The absence of distress is not a signal to escalate.",
    "Readiness is inferred, never assumed.",
    "The system never pushes forward — it only permits readiness."
  ],
  "primary_states": {
    "stabilization": {
      "description": "The user benefits from staying at the current foundational level.",
      "allowed_language_mode": "holding",
      "indicators": {
        "symptom_intensity": ["moderate", "intense", "fluctuating"],
        "tolerance_and_capacity": [
          "easily overwhelmed",
          "sensitive to changes"
        ],
        "pattern_observations": [
          "worse during stress",
          "comes in waves",
          "unpredictable"
        ]
      },
      "required_response_elements": [
        "Normalize staying at current step",
        "Remove urgency",
        "Reinforce safety and pacing"
      ]
    },
    "observation": {
      "description": "The user is stable but still gathering information.",
      "allowed_language_mode": "observational",
      "indicators": {
        "symptom_intensity": ["mild", "moderate"],
        "pattern_observations": [
          "improves slowly",
          "changes throughout the day"
        ],
        "goals_and_intent": [
          "want to understand what my body is doing",
          "want reassurance, not change"
        ]
      },
      "required_response_elements": [
        "Encourage noticing patterns",
        "Avoid recommendations",
        "Support continued observation"
      ]
    },
    "integration": {
      "description": "The user is tolerating current support well and consolidating gains.",
      "allowed_language_mode": "reinforcing",
      "indicators": {
        "symptom_intensity": ["mild"],
        "tolerance_and_capacity": [
          "generally stable",
          "able to tolerate slow additions"
        ],
        "pattern_observations": [
          "more consistent",
          "less reactive",
          "improving over time"
        ]
      },
      "required_response_elements": [
        "Acknowledge stability",
        "Reinforce current supports",
        "Avoid introducing new steps"
      ]
    },
    "readiness_check": {
      "description": "The user may be approaching readiness for the next phase.",
      "allowed_language_mode": "tentative",
      "indicators": {
        "symptom_intensity": ["mild", "resolved"],
        "tolerance_and_capacity": [
          "generally stable"
        ],
        "goals_and_intent": [
          "seeing if I’m ready for the next step"
        ]
      },
      "required_response_elements": [
        "Frame readiness as a question, not a conclusion",
        "Emphasize optionality",
        "State that staying is still valid"
      ],
      "explicit_prohibitions": [
        "Declaring readiness",
        "Triggering progression automatically"
      ]
    },
    "pause_and_support": {
      "description": "The user may need to slow down or reduce stimulation.",
      "allowed_language_mode": "protective",
      "indicators": {
        "symptom_intensity": ["intense"],
        "pattern_observations": [
          "worse after changes",
          "escalating symptoms"
        ],
        "tolerance_and_capacity": [
          "sensitive to changes"
        ]
      },
      "required_response_elements": [
        "Encourage slowing down",
        "Remove pressure to continue",
        "Reinforce safety"
      ]
    }
  },
  "state_resolution_rules": {
    "priority_order": [
      "pause_and_support",
      "stabilization",
      "observation",
      "integration",
      "readiness_check"
    ],
    "conflict_handling": "If indicators match multiple states, the system must select the most conservative state based on priority order.",
    "default_state": "observation"
  },
  "output_constraints": {
    "no_protocol_generation": true,
    "no_diagnosis_language": true,
    "no_medical_advice": true,
    "no_urgency_language": true
  },
  "handoff_conditions": {
    "if_safety_triggered": "defer_to_safety_overrides",
    "if_user_requests_medical_decision": "boundary_reinforcement"
  }
}
